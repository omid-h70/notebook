    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Go App",
            "type": "go",
            "request": "launch",
            "mode": "auto", //or set specifically to 'debug' in some cases
            "program": "${workspaceFolder}",
            "args": ["serve"],

            // Set default environment variables
            "env": {
                "APP_ENV": "dev",
                "APP_PORT": "8080"
            }
        }
    ]
}
